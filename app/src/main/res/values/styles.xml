<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyleRoboto" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextStyleRoboto.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyleRoboto.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyleRoboto.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyleRoboto.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleRoboto.Bold.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyleRoboto.Bold.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyleRoboto.Bold.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyleRoboto.Bold.Header">
        <item name="android:textSize">24sp</item>
    </style>

</resources>